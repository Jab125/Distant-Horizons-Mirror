{
  "schemaVersion": 1,
  "id": "lod",
  "version": "${version}",

  "name": "${mod_name}",
  "description": "${description}",
  "authors": ["${authors}"],

  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/distant-horizons",
    "sources": "https://gitlab.com/jeseibel/minecraft-lod-mod/",
    "issues": "https://gitlab.com/jeseibel/minecraft-lod-mod/-/issues"
  },

  "license": "CC0-1.0",
  "icon": "icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.seibel.lod.fabric.Main"
    ],
    "modmenu": [
      "com.seibel.lod.fabric.wrappers.config.ModMenuIntegration"
    ]
  },

  "mixins": [
    "fabric.lod.mixins.json"
  ],

  "accessWidener" : "lod.accesswidener",
  "depends": {
    "fabricloader": "*",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/xAB8G4cENx"
      }
    }
  }
}
